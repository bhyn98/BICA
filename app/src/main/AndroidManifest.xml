<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bica">

    <uses-sdk tools:overrideLibrary="com.google.zxing.client.android" />
    <!-- required 부분에 true 처리하면 nfc 보유한 기기만 마켓에서 검색되고 설치가능 -->
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" /> <!-- 권한 체크 -->
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
<!--    <uses-permission android:name="android.permission.WAKE_LOCK" />-->

    <application
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_bica"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bica_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BICA">
        <activity
            android:name=".nfc.Nfc_Write_Activity"
            android:exported="false" />
        <activity
            android:name=".AddCardActivity"
            android:exported="false" />
        <activity
            android:name=".nfc.Nfc_Read_Activity"
            android:exported="false">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <data android:mimeType="*/*" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />
        </activity>
        <activity
            android:name=".ShowCardActivity"
            android:exported="false" />
        <activity
            android:name=".member.FindIDActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".member.LoginActivity" />
        </activity>
        <activity
            android:name=".ScanQR"
            android:exported="false"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />
        <activity
            android:name=".member.RegisterCardActivity"
            android:exported="false" />
        <activity
            android:name=".member.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".InitialActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".member.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>